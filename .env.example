# Domain Checker Configuration
# Copy this file to .env and modify as needed

# Required: Path to domain variations database (DuckDB)
VARIATIONS_DB=/data/domain_variations.duckdb

# Required: Path to results database (will be created if not exists)
CHECKS_DB=/data/domain_checks.duckdb

# Required: Path to proxy list file (format: user:pass@host:port per line)
PROXY_FILE=/data/proxies.txt

# Resume from last checkpoint (default: true)
RESUME=true

# Domains per batch (default: 10000)
BATCH_SIZE=10000

# Save checkpoint every N domains (default: 100000)
CHECKPOINT_INTERVAL=100000

# Optional: Limit number of proxies to use (default: all)
# MAX_PROXIES=500

# Optional: Limit total domains to check (default: all)
# LIMIT=1000000
